<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/distance_reg"
        android:textSize="@dimen/size20" />

    <EditText
        android:id="@+id/popup_distance_reg"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size15"
        android:textStyle="bold"
        android:inputType="number"
        android:maxLength="3"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/horizontal_reg"
        android:textSize="@dimen/size20" />

    <EditText
        android:id="@+id/popup_horizontal_reg"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size15"
        android:textStyle="bold"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vertical_reg"
        android:textSize="@dimen/size20" />

    <EditText
        android:id="@+id/popup_vertical_reg"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size15"
        android:textStyle="bold"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profondeur_reg"
        android:textSize="@dimen/size20" />

    <EditText
        android:id="@+id/popup_profondeur_reg"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size15"
        android:textStyle="bold"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nomremarque"
        android:textSize="@dimen/size20" />

    <EditText
        android:id="@+id/popup_remarque_reg"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size15"
        android:textStyle="bold" />

</LinearLayout>